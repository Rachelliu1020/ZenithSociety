@model ZenithWebSite.Models.ZenithModels.MyEvent

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MyEventId" />
        <div class="form-group">
            @*<label asp-for="CreationDate" class="col-md-2 control-label"></label>*@
            <div class="col-md-10">
                <input asp-for="CreationDate" type="hidden" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            @*<label asp-for="Creator" class="col-md-2 control-label"></label>*@
            <div class="col-md-10">
                <input asp-for="Creator" type="hidden" class="form-control" />
                <span asp-validation-for="Creator" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateTimeFrom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{
                    string dateFrom = Model.DateTimeFrom.ToString("yyyy-MM-ddTHH:mm:ss");
                }
                <input asp-for="DateTimeFrom" type="datetime-local" class="form-control" value="@dateFrom" />
                <span asp-validation-for="DateTimeFrom" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateTimeTo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{
                    string dateTo = Model.DateTimeTo.ToString("yyyy-MM-ddTHH:mm:ss");
                }
                <input asp-for="DateTimeTo" type="datetime-local" class="form-control" value="@dateTo"/>
                <span asp-validation-for="DateTimeTo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MyActivity.ActivityDesp" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MyActivityId" class="form-control" asp-items="ViewBag.MyActivityId"></select>
                <span asp-validation-for="MyActivityId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
