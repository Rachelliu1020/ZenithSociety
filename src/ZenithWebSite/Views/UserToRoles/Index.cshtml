@model IEnumerable<ZenithWebSite.Models.IdentityModels.UserRoleModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Users To Roles</h2>

<p>
    <a asp-action="Create">Assign User to Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            
            <td>
                <a asp-action="Delete" asp-route-roleId="@item.RoleId" asp-route-id="@item.UserId" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
